{
    "manifest_version": 3,
    "name": "Tabs Sorter",
    "author": "Gabriela Aguilar 2023",
    "version": "1.0.0.0",
    "description": "Tab Sorter: Easing Navigation in Tab-Overloaded Scenarios.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "icons": {
      "16": "/images/icon-16x16.png",
      "32": "/images/icon-32x32.png",
      "48": "/images/icon-48x48.png",
      "128": "/images/icon-128x128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/icon-16x16.png",
            "32": "/images/icon-32x32.png",
            "48": "/images/icon-48x48.png",
            "128": "/images/icon-128x128.png"
        }
    },

    "options_page": "options.html",
    "host_permissions": [
      "https://www.google.com/*"
    ],
  "content_security_policy": {
      "extension_pages": "default-src 'self'"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "font/AlbertSans-BlackItalic.ttf",
        "font/AlbertSans-BoldItalic.ttf",
        "font/AlbertSans-ExtraBoldItalic.ttf",
        "font/AlbertSans-ExtraBoldItalic.ttf",
        "font/AlbertSans-ExtraBoldItalic.ttf",
        "font/AlbertSans-Italic.ttf",
        "font/AlbertSans-LightItalic.ttf",
        "font/AlbertSans-MediumItalic.ttf",
        "font/AlbertSans-SemiBoldItalic.ttf",
        "font/AlbertSans-Black.ttf",
        "font/AlbertSans-Bold.ttf",
        "font/AlbertSans-ExtraBold.ttf",
        "font/AlbertSans-ExtraLight.ttf",
        "font/AlbertSans-Light.ttf",
        "font/AlbertSans-Medium.ttf",
        "font/AlbertSans-Regular.ttf",
        "font/AlbertSans-SemiBold.ttf",
        "font/AlbertSans-Thin.ttf",
        "font/AlbertSans-ThinItalic.ttf",
        "font/AlbertSans-ExtraLightItalic.ttf"
      ],
      "matches": ["<all_urls>"]
    }
  ]

}